<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/hourTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hourIconImageView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@id/hourTextView"
        app:layout_constraintStart_toStartOf="@id/hourTextView"
        app:layout_constraintTop_toBottomOf="@id/hourTextView" />

    <TextView
        android:id="@+id/hourTemperatureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@id/hourTextView"
        app:layout_constraintStart_toStartOf="@id/hourTextView"
        app:layout_constraintTop_toBottomOf="@id/hourIconImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>